<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efe2ca"
    android:orientation="vertical"
    tools:context=".Profile">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abc_vector_test" />


            <ImageView
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:src="@drawable/logo_test"
                android:paddingBottom="10dp"
                />


        </LinearLayout> <!--Profile pick button back-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="@android:dimen/app_icon_size"
                android:text="Name"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="@android:dimen/app_icon_size"
                android:text="Last Name"
                android:textAlignment="textStart" />


        </LinearLayout> <!--Name and last name-->

    </LinearLayout> <!--First block-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0" /> <!--Line-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/birthdate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@android:dimen/app_icon_size"
                android:paddingTop="10dp"
                android:text="Birthdate" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@android:dimen/app_icon_size"
                android:paddingTop="10dp"
                android:text="Gender" />

        </LinearLayout> <!--Birthdate and Gender-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/city"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@android:dimen/app_icon_size"
                android:paddingTop="20dp"
                android:text="City"
                android:paddingBottom="10dp"
                />

            <TextView
                android:id="@+id/country"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@android:dimen/app_icon_size"
                android:paddingTop="20dp"
                android:text="Country"
                android:paddingBottom="10dp"
                />

        </LinearLayout> <!--City country-->


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0" /> <!--Line-->

</LinearLayout>